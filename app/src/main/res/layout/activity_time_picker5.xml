<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".TimePickerActivity5">

    <RelativeLayout
        android:id="@+id/quizId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp">

    <TimePicker
        android:id="@+id/simpleTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#90CAF9"
        android:padding="20dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=" Quiz Time Is ::"
        android:textColor="#90CAF9"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

     <Button
         android:id="@+id/button1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Set Time"
         android:textStyle="bold"
         android:textSize="40dp"
         android:layout_marginTop="350dp"
         android:layout_marginLeft="50dp"

        />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/onlineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="60dp">

        <TimePicker
            android:id="@+id/simpleTimePicker2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#F8BBD0"
            android:padding="20dp"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Online Time Is ::"
            android:textColor="#F8BBD0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="50dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/offlineId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="60dp">

        <TimePicker
            android:id="@+id/simpleTimePicker3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="#D1C4E9"
            android:padding="20dp"
            android:timePickerMode="spinner" />

        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Offline Time Is ::"
            android:textColor="#D1C4E9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Time"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="50dp"

            />

        <Button
            android:id="@+id/nextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Next"
            android:layout_marginTop="500dp"
            android:layout_marginLeft="85dp"
            android:textSize="40dp" />

    </RelativeLayout>


</RelativeLayout>